<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/_head.ejs') %>
    <title>User Profile - MarLoop</title>
</head>
<body>
    <%- include('partials/_header.ejs') %>
    <div class="container mt-5">
        <h1>User Profile</h1>
        <div class="user-info">
            <p><strong>Username:</strong> <%= user.username %></p>
            <% if (user.lastAccessed) { %>
                <p><strong>Last Accessed:</strong> <%= user.lastAccessed.toDateString() %></p>
            <% } else { %>
                <p><strong>Last Accessed:</strong> Not available</p>
            <% } %>
        </div>
        <a href="/dashboard" class="btn btn-primary mt-3">Back to Dashboard</a>
    </div>
    <%- include('partials/_footer.ejs') %>
</body>
</html>